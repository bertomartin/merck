.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{:"data-toggle" => "collapse", :"data-target"=>".navbar-collapse"}
        %span.sr-only
          Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path}
        Merck Hack

    .navbar-collapse.collapse
      %ul.nav.nav-pills.pull-left
        %li
          %a{:href => "#"}
            About
        %li
          %a{:href => "#"}
            Contact
      - if current_user
        %ul.nav.nav-pills.pull-left
          %li
            =link_to "Log Out", logout_path
      - else
        =form_tag sessions_path, {:class => "navbar-form navbar-right"} do
          .form-group
            =text_field_tag :email, params[:email], :placeholder => "Email"
          .form-group
            =text_field_tag :password, params[:password], :placeholder => "Password"
          .btn.btn-success
            =submit_tag "Log in"


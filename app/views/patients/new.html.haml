
%h1 Add a new patient

=form_for [@user, @patient], :url => user_patients_path do |f|
  .field
    =f.label :name
    %br
    =f.text_field :name

  .field
    =f.label :your_relationship
    %br
    =f.text_field :your_relationship


  .field
    =f.label :phone
    %br
    =f.text_field :phone
    %br

  = f.fields_for :patient_conditions do |pc|
    = pc.fields_for :conditions do |c|
      =c.label "Select Condition"
      =c.collection_select(:collection_id, Condition.all, :id, :name)


  .field
    %br
    =f.submit "Create Patient"


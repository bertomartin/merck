%h1
  Sign up
= form_for @user do |f|
  -if @user.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in @user.errors.full_messages
          %li= message
  .field
    =f.label :name
    =f.text_field :name
  .field
    =f.label :email
    =f.text_field :email
  .field
    =f.label :password
    =f.text_field :password
  .field
    =f.label :password_confirmation
    =f.text_field :password_confirmation
  .actions
    =f.submit